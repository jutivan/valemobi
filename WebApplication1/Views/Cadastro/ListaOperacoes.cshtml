@model List<Valemobi.Models.Mercadoria>
@{
    ViewBag.Title = "ListaOperacoes";
}


<div class="container">
    <h2>Lista de Operações</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Código Mercadoria</th>
                <th>Tipo Mercadoria</th>
                <th>Nome Mercadoria</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Compra / Venda</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < @Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].codigo</td>
                    <td>@Model[i].tipo</td>
                    <td>@Model[i].nome</td>
                    <td>@Model[i].quantidade</td>
                    <td>R$ @Model[i].preco</td>
                    <td>@Model[i].tipoNegocio</td>

                </tr>
            }
        </tbody>
    </table>
</div>


